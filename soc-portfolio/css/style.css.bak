/* 
 * SOC PORTFOLIO - CORE STYLES
 * Theme: Dark / Cyber / Terminal
 */

:root {
    --bg-color: #050505;
    --bg-secondary: #0a0f0d;
    --text-primary: #e0e0e0;
    --text-secondary: #a0a0a0;

    /* Cyber Accents */
    --neon-green: #00ff41;
    --neon-blue: #00f3ff;
    --alert-red: #ff3333;
    --terminal-bg: #0c0c0c;

    /* Spacing */
    --section-padding: 100px 0;

    /* Fonts */
    --font-mono: 'Fira Code', 'Courier New', monospace;
    --font-sans: 'Inter', sans-serif;
}

/* --- RESET & BASE --- */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
    scroll-behavior: smooth;
}

body {
    background-color: var(--bg-color);
    color: var(--text-primary);
    font-family: var(--font-sans);
    line-height: 1.6;
    overflow-x: hidden;
}

a {
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
}

ul {
    list-style: none;
}

/* Custom Scrollbar */
::-webkit-scrollbar {
    width: 8px;
}

::-webkit-scrollbar-track {
    background: var(--bg-color);
}

::-webkit-scrollbar-thumb {
    background: var(--neon-green);
    border-radius: 4px;
}

/* Selection */
::selection {
    background: var(--neon-green);
    color: var(--bg-color);
}

/* --- UTILITIES --- */
.container {
    width: 90%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

.section-title {
    font-family: var(--font-mono);
    font-size: 2rem;
    color: var(--neon-green);
    margin-bottom: 3rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    display: flex;
    align-items: center;
}

.section-title::before {
    content: '>';
    margin-right: 10px;
    color: var(--neon-blue);
}

.section-title::after {
    font-size: 1.2rem;
    color: var(--neon-green);
}

/* --- NAVIGATION --- */
nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 50px;
    background: rgba(5, 5, 5, 0.9);
    backdrop-filter: blur(10px);
    position: fixed;
    width: 100%;
    top: 0;
    left: 0;
    z-index: 1000;
    border-bottom: 1px solid #111;
}

.logo {
    font-family: var(--font-mono);
    font-weight: 700;
    font-size: 1.2rem;
    color: var(--neon-green);
}

nav ul {
    display: flex;
    gap: 30px;
}

nav a {
    font-family: var(--font-mono);
    font-size: 0.9rem;
    color: var(--text-secondary);
    position: relative;
}

nav a:hover,
nav a.active {
    color: var(--neon-green);
}

nav a::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--neon-green);
    transition: width 0.3s ease;
}

nav a:hover::after {
    width: 100%;
}

/* --- HERO SECTION --- */
.hero {
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    background: radial-gradient(circle at center, #111 0%, #000 100%);
    padding-top: 80px;
}

/* Scanline Overlay */
.hero::before {
    content: " ";
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background: linear-gradient(rgba(18, 16, 16, 0) 50%, rgba(0, 0, 0, 0.25) 50%), linear-gradient(90deg, rgba(255, 0, 0, 0.06), rgba(0, 255, 0, 0.02), rgba(0, 0, 255, 0.06));
    z-index: 2;
    background-size: 100% 2px, 3px 100%;
    pointer-events: none;
}

.hero-content {
    text-align: center;
    z-index: 3;
}

.status-badge {
    display: inline-block;
    padding: 5px 15px;
    border: 1px solid var(--neon-green);
    color: var(--neon-green);
    font-family: var(--font-mono);
    font-size: 0.8rem;
    margin-bottom: 20px;
    background: rgba(0, 255, 65, 0.1);
    border-radius: 4px;
}

.hero h1 {
    font-size: 4rem;
    font-weight: 800;
    margin-bottom: 1rem;
    letter-spacing: -1px;
}

.hero h1 span {
    color: var(--neon-green);
}

.typing-container {
    font-family: var(--font-mono);
    font-size: 1.2rem;
    color: var(--neon-blue);
    min-height: 1.6em;
}

.cursor {
    display: inline-block;
    width: 10px;
    background-color: var(--neon-blue);
    animation: blink 1s infinite;
}

@keyframes blink {

    0%,
    100% {
        opacity: 1;
    }

    50% {
        opacity: 0;
    }
}

.cta-group {
    margin-top: 40px;
}

.btn {
    display: inline-block;
    padding: 12px 30px;
    font-family: var(--font-mono);
    font-weight: 700;
    text-transform: uppercase;
    border-radius: 4px;
    margin: 0 10px;
    cursor: pointer;
    position: relative;
    overflow: hidden;
}

.btn-primary {
    background: var(--neon-green);
    color: #000;
    border: 1px solid var(--neon-green);
}

.btn-primary:hover {
    background: transparent;
    color: var(--neon-green);
    box-shadow: 0 0 15px rgba(0, 255, 65, 0.5);
}

.btn-secondary {
    background: transparent;
    color: var(--text-primary);
    border: 1px solid var(--text-secondary);
}

.btn-secondary:hover {
    border-color: var(--neon-blue);
    color: var(--neon-blue);
}

/* --- ABOUT SECTION --- */
.about {
    padding: var(--section-padding);
    background: var(--bg-secondary);
}

.about-grid {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 50px;
    align-items: start;
}

.profile-card {
    background: #111;
    border: 1px solid #333;
    padding: 20px;
    border-radius: 8px;
    position: relative;
}

.profile-card::before {
    content: '';
    position: absolute;
    top: -1px;
    left: -1px;
    right: -1px;
    height: 2px;
    background: var(--neon-green);
    border-radius: 8px 8px 0 0;
}

.profile-header {
    display: flex;
    align-items: center;
    margin-bottom: 20px;
    border-bottom: 1px solid #333;
    padding-bottom: 15px;
}

.avatar-placeholder {
    width: 60px;
    height: 60px;
    background: #222;
    border-radius: 50%;
    margin-right: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid var(--neon-green);
}

.profile-info h3 {
    font-family: var(--font-mono);
    font-size: 1.1rem;
    color: var(--text-primary);
}

.profile-info span {
    font-size: 0.8rem;
    color: var(--neon-blue);
}

.stats-list li {
    display: flex;
    justify-content: space-between;
    margin-bottom: 10px;
    font-family: var(--font-mono);
    font-size: 0.9rem;
}

.stats-list span.label {
    color: var(--text-secondary);
}

.stats-list span.value {
    color: var(--neon-green);
}

.about-text p {
    margin-bottom: 20px;
    color: var(--text-secondary);
}

/* --- SKILLS SECTION --- */
.skills {
    padding: var(--section-padding);
}

.skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
}

.skill-category {
    background: rgba(255, 255, 255, 0.03);
    padding: 25px;
    border-radius: 8px;
    border: 1px solid rgba(255, 255, 255, 0.05);
}

.skill-category h3 {
    font-family: var(--font-mono);
    color: var(--neon-blue);
    margin-bottom: 20px;
    font-size: 1.1rem;
}

.skill-list {
    list-style: none;
    padding-left: 5px;
}

.skill-list li {
    font-family: var(--font-mono);
    color: var(--text-secondary);
    margin-bottom: 12px;
    position: relative;
    padding-left: 20px;
    transition: color 0.3s ease;
}

.skill-list li::before {
    content: '>';
    position: absolute;
    left: 0;
    color: var(--neon-green);
    font-weight: bold;
}

.skill-list li:hover {
    color: var(--text-primary);
    transform: translateX(5px);
}

/* --- PROJECTS SECTION --- */
.projects {
    padding: var(--section-padding);
    background: var(--bg-secondary);
}

.project-card {
    background: #0f0f0f;
    border: 1px solid #222;
    padding: 30px;
    margin-bottom: 30px;
    border-radius: 8px;
    transition: transform 0.3s ease, border-color 0.3s ease;
    position: relative;
    overflow: hidden;
}

.project-card:hover {
    transform: translateY(-5px);
    border-color: var(--neon-green);
}

.project-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 15px;
}

.project-title {
    font-family: var(--font-mono);
    font-size: 1.3rem;
    color: var(--text-primary);
}

.project-type {
    font-size: 0.8rem;
    color: var(--neon-blue);
    border: 1px solid var(--neon-blue);
    padding: 2px 8px;
    border-radius: 4px;
}

.project-desc {
    color: var(--text-secondary);
    margin-bottom: 20px;
}

.tech-stack {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
    margin-bottom: 20px;
}

.tech-tag {
    font-size: 0.8rem;
    color: #888;
    background: #1a1a1a;
    padding: 4px 10px;
    border-radius: 4px;
}

.project-links a {
    font-family: var(--font-mono);
    font-size: 0.9rem;
    color: var(--neon-green);
    margin-right: 20px;
}

.project-links a:hover {
    text-decoration: underline;
}

/* --- EXPERIENCE SECTION (Timeline) --- */
.experience {
    padding: var(--section-padding);
}

.timeline {
    position: relative;
    max-width: 800px;
    margin: 0 auto;
}

.timeline::before {
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    left: 20px;
    /* Adjust for mobile, center for desktop if desired */
    width: 2px;
    background: #333;
}

.timeline-item {
    position: relative;
    margin-bottom: 50px;
    padding-left: 60px;
}

.timeline-dot {
    position: absolute;
    left: 11px;
    top: 0;
    width: 20px;
    height: 20px;
    background: var(--bg-color);
    border: 2px solid var(--neon-green);
    border-radius: 50%;
    z-index: 2;
    box-shadow: 0 0 10px rgba(0, 255, 65, 0.3);
}

.experience-card {
    background: #111;
    border: 1px solid #222;
    padding: 25px;
    border-radius: 8px;
    position: relative;
    transition: all 0.3s ease;
}

.experience-card:hover {
    border-color: var(--neon-green);
    transform: translateX(5px);
}

.experience-card::before {
    content: '';
    position: absolute;
    left: -10px;
    top: 20px;
    width: 0;
    height: 0;
    border-top: 10px solid transparent;
    border-bottom: 10px solid transparent;
    border-right: 10px solid #222;
    /* Matches border color */
}

.job-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 5px;
    flex-wrap: wrap;
}

.job-title {
    font-family: var(--font-mono);
    color: var(--text-primary);
    font-size: 1.2rem;
}

.job-period {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    color: var(--neon-green);
    background: rgba(0, 255, 65, 0.1);
    padding: 2px 8px;
    border-radius: 4px;
}

.company-name {
    color: var(--neon-blue);
    font-size: 1rem;
    margin-bottom: 15px;
}

.job-desc {
    color: var(--text-secondary);
    margin-bottom: 15px;
    font-size: 0.95rem;
}

/* --- CERTIFICATIONS SECTION --- */
.certifications {
    padding: var(--section-padding);
    background: var(--bg-secondary);
}

.certs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 25px;
}

.cert-card {
    background: #0f0f0f;
    border: 1px solid #222;
    padding: 25px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    gap: 20px;
    transition: all 0.3s ease;
}

.cert-card:hover {
    border-color: var(--neon-blue);
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0, 243, 255, 0.1);
}

.cert-icon {
    font-size: 2.5rem;
    color: var(--neon-green);
    min-width: 60px;
    text-align: center;
}

.cert-info h3 {
    font-family: var(--font-mono);
    font-size: 1.1rem;
    color: var(--text-primary);
    margin-bottom: 5px;
}

.cert-info .issuer {
    display: block;
    font-size: 0.9rem;
    color: var(--text-secondary);
}

.cert-info .date {
    display: block;
    font-size: 0.8rem;
    color: #666;
    margin-bottom: 10px;
}

.verify-link {
    font-size: 0.8rem;
    color: var(--neon-blue);
    font-family: var(--font-mono);
}

.verify-link:hover {
    text-decoration: underline;
}

/* --- CONTACT SECTION --- */
.contact {
    padding: var(--section-padding);
    text-align: center;
}

.contact-container {
    max-width: 600px;
    margin: 0 auto;
    background: #111;
    padding: 40px;
    border-radius: 8px;
    border: 1px solid #333;
}

.contact-form {
    display: flex;
    flex-direction: column;
    gap: 20px;
}

.form-group {
    text-align: left;
}

.form-group label {
    display: block;
    margin-bottom: 8px;
    font-family: var(--font-mono);
    font-size: 0.9rem;
    color: var(--text-secondary);
}

.form-control {
    width: 100%;
    padding: 12px;
    background: #050505;
    border: 1px solid #333;
    color: var(--text-primary);
    font-family: var(--font-sans);
    border-radius: 4px;
}

.form-control:focus {
    outline: none;
    border-color: var(--neon-green);
    box-shadow: 0 0 5px rgba(0, 255, 65, 0.3);
}

/* --- FOOTER --- */
